<section class="post-list">
  <% @posts.each do |post| %>
      <%# <%= link_to post_path(post), class: "post-link-container" do %>
      <article class="post-card">
        <%= image_tag post.cover, class: "post-card-cover" %>
        <section class="post-card-body">
          <h3 class="post-card-body-title capitalize"><%= post.title %></h3>
          <h4 class="post-card-body-description"><%= post.description %></h4>
          <div class="flex mt-4">
            <% post.categories.each do |category| %>
              <h4 class="px-4 py-1 bg-teal-500 rounded mr-3 text-white capitalize"><%= category.name %></h4>
            <% end %>
          </div>
        </section>
      </article>
      <%# <% end %>
  <% end %>
</section>