<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'border border-gray-300 rounded shadow-lg px-20 py-12 bg-white flex flex-col items-center content-between w-1/3' }) do |f| %>
  <%= image_tag asset_path("logo.png"), class: 'w-40 h-40 mb-3' %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded mb-3 px-4 py-2 w-full border-2 border-gray-300', placeholder: 'email' %>

  <%= f.password_field :password, autocomplete: "current-password", class: 'rounded mb-6 px-4 py-2 w-full border-2 border-gray-300', placeholder: 'password' %>

  <%= f.submit "Log in", class: 'bg-blue-600 text-white w-1/2 py-2 rounded mb-3' %>

  <% if devise_mapping.rememberable? %>
    <div class="">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<% end %>
