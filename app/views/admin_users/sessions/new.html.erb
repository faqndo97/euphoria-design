<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'sign-in-form' }) do |f| %>
  <%= image_tag asset_path("logo.png"), class: 'w-40 h-40 mb-3' %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign-in-input', placeholder: 'email' %>

  <%= f.password_field :password, autocomplete: "current-password", class: 'sign-in-input mb-6', placeholder: 'password' %>

  <%= f.submit "Log in", class: 'sign-in-btn' %>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<% end %>
