<% flash.each do |key, value| %>
  <% if key.present? %>
    <div class="flex justify-center mt-16">
      <% if  key == "success" %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative w-8/12" role="alert">
          <span class="block sm:inline"><%= "#{value}"%></span>
        </div>
      <% elsif key == "error" %>
        <div class="bg-red-100 border border-Red-400 text-red-700 px-4 py-3 rounded relative w-8/12" role="alert">
          <span class="block sm:inline"><%= "#{value}"%></span>
        </div>
      <% end %>
    </div>
  <%end %>
<% end %>
<%= form_for @contact, url: contact_create_path, html: { method: :post, class: 'w-full flex justify-center mt-16'} do |f| %>
  <div class="w-8/12">
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3">
        <%= f.label :name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
        <%= f.text_field :name, autocomplete: "name", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>
      <div class="w-full md:w-1/2 px-3">
        <%= f.label :email, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
        <%= f.email_field :email, autocomplete: "email" , class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3">
        <%= f.label :message, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
        <%= f.text_area :message , class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>
    </div>
    <%= f.submit 'Enviar', class: 'bg-gray-900 hover:bg-blue-700 text-white font-bold py-2 px-4' %>
  </div>
<% end %>
